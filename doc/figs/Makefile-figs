PHPFILES:=$(wildcard *.php)
EPSFILES:=$(PHPFILES:%.php=%.eps)
PDFFILES:=$(PHPFILES:%.php=%.pdf)

SHELL=/bin/bash

.PHONY: all clean C eps pdf

all pdf: eps $(PDFFILES)

clean:
	@-rm -rfv $(PDFFILES) $(EPSFILES)

C: clean

eps: $(EPSFILES)

# Generic rules
%.eps: %.php
	@php $< > $@

%.pdf: %.eps
	@epstopdf $< > $@

